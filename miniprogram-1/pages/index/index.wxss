page {
  background-color: #edece8;
}
.index_swiper swiper {
  display: flex;
  padding: 30rpx;
  width: 750rpx;
  height: 750rpx;
}
.index_swiper swiper image {
  justify-self: center;
  align-self: center;
  width: 100%;
  border-radius: 30rpx;
}
.index_activity {
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
}
.index_activity .index_activity_title {
  color: var(--themeColor);
  font-size: 40rpx;
  font-weight: 600;
}
.index_activity .index_activity_item {
  display: flex;
  flex-direction: row;
  height: 30vw;
  border-radius: 15rpx;
  margin-top: 30rpx;
}
.index_activity .index_activity_item navigator {
  flex: 1;
  padding: 50rpx;
  border-radius: 20rpx;
  margin-right: 30rpx;
  background-color: #fff;
  justify-content: center;
  align-items: center;
}
.index_activity .index_activity_item navigator image {
  width: 100%;
}
.index_activity .index_activity_item navigator text {
  font-size: 27rpx;
}
.index_show {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}
.index_show .show_title {
  color: var(--themeColor);
  font-size: 40rpx;
  font-weight: 600;
}
.index_show navigator {
  background-color: white;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  padding: 10rpx;
  border-radius: 30rpx;
}
.index_show navigator .show_good_pic {
  flex: 2;
  align-items: center;
  justify-content: center;
  height: 30vw;
}
.index_show navigator .show_good_pic image {
  height: 100%;
  width: 100%;
  border-radius: 20rpx;
}
.index_show navigator .show_good_info {
  flex: 3;
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.index_show navigator .show_good_info .show_good_name {
  flex: 2;
  text-align: left;
  justify-self: center;
  font-size: 40rpx;
  font-weight: 550;
  color: var(--themeColor);
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}
.index_show navigator .show_good_info .show_good_price {
  flex: 1;
  text-align: right;
  color: red;
  font-size: 50rpx;
  font-weight: 600;
}
