/* pages/my/my.wxss */
/* 上部分的样式 */
.top_part{
    margin-top: 3rpx;
    background-color: #AB956D;
    width: 100%;
    height: 300rpx;
    display: flex;
    flex-direction: row;
    align-items: flex-end
}
/* 用户头像的样式 */
.user_pic{
    margin-bottom: 30rpx;
    margin-left: 30rpx;
    margin-right: 20rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
/* 用户名字的样式 */
.name_service{
    flex-grow: 1;
    height: 100rpx;
    margin-bottom: 30rpx;
    display: flex;   
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}
/* “联系客服的样式” */
.service{
    margin-right: 30rpx;
}

/* 我的页面下半部分的样式 */

/* 设置整体地址的样式 */
.address{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: center;
    line-height: 100rpx;
    border-bottom: 2px gold solid;
}
/* 设置后面小箭头的样式 */
.address::after{
    position: absolute;
    right: 10rpx;
    top: 340rpx;
    content: '';
    width: 16rpx;
    height: 18rpx;
    border-top: 4rpx solid #7f7f7f;
    border-right: 4rpx solid #7f7f7f;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}

.address_list{
    background-color: #F1F1F1;
    margin-left: 30rpx;
    margin-top: 30rpx;
    margin-right: 30rpx;
}
.add_title{
    font-family: 'Courier New', Courier, monospace;
    color: cornflowerblue;
}
.address_list view{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    height: 35px;
    line-height: 35rpx;
    font-family: 'Courier New', Courier, monospace;
    border-bottom: 1px green solid;
 
    margin-bottom: 30rpx;
}

/* 设置订单管理的样式 */
.order_title{
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-between;
    flex-direction: row;
    border-bottom: 2px solid #bbffaa;
    justify-content: center;
    height: 100rpx;
    line-height: 100rpx;
}
.item_title{
    font-family: 'Courier New', Courier, monospace;
    color: coral;
}

/* 设置具体每一个订单的样式 */
.order_detail{
    margin-right: 50rpx;
    border-radius: 50rpx;
    overflow: hidden;
    background-color: #F1F1F1;
    margin-left: 50rpx;
    margin-top: 50rpx;
    height: 180rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    margin-bottom: 10rpx;
}

.goods_image{
    border-radius: 50rpx;
    flex-shrink: 0;
    width: 180rpx;
    height: 180rpx;
}

.order_text{
    margin-left: 5rpx;
    justify-content: center;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}










